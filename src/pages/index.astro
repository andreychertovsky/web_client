---
import { BaseLayout } from "@/layouts";

import { containerStyles } from "@/shared/ui/container";
import { Dialog } from "@/shared/ui/dialog";

import { NavMobile, NavDesktop } from "./_ui/nav";
import { Hero } from "./_ui/hero";
import { Upload } from "./_ui/upload";
import { Find } from "./_ui/find";
import { Markets } from "./_ui/markets";

import styles from "./_styles.module.css";
---

<BaseLayout>
  <header class={containerStyles}>
    <NavDesktop />
  </header>
  <main class={styles.root}>
    <Hero />
    <Upload />
    <Find />
    <Markets />
  </main>
  <Dialog name="menu">
    <NavMobile />
  </Dialog>
</BaseLayout>
