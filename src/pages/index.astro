---
import { BaseLayout } from "@/layouts";

import { containerStyles } from "@/shared/ui/container";
import { Dialog } from "@/shared/ui/dialog";
import { NavMobile, NavDesktop } from "@/shared/ui/nav";
import { DIALOGS } from "@/shared/config";

import { Hero } from "./_ui/hero";
import { Upload } from "./_ui/upload";
import { Find } from "./_ui/find";
import { Markets } from "./_ui/markets";
import { FAQ } from "./_ui/faq";
import { Footer } from "./_ui/footer";

import styles from "./_styles.module.css";
---

<BaseLayout>
  <header class={containerStyles}>
    <NavDesktop />
  </header>
  <main class={styles.root}>
    <Hero />
    <Upload />
    <Find />
    <Markets />
    <FAQ />
  </main>
  <Footer />
  <Dialog name={DIALOGS.MENU}>
    <NavMobile />
  </Dialog>
</BaseLayout>

<script src="@/entities/scroll/ui/wc-scroll-to-trigger/index.ts"></script>
<script src="@/entities/scroll/ui/wc-scroll-to-section/index.ts"></script>
<script src="./_script.ts"></script>
