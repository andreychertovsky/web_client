---

<div class:list={styles.root}>
  <ul class={styles.list}>
    {
      results.map(({ imgSrc, store, price, text }) => (
        <li class={styles.item}>
          <img class={styles.image} src={imgSrc} />
          <div class={styles.wrapper}>
            <p class:list={[styles.tag]}>{price}</p>
            <div class={styles.info}>
              <Store name={store} />
              <button class={styles.buttonSearch} type="button">
                <IconSearchImage />
              </button>
            </div>
            <p class={styles.text}>{text}</p>
          </div>
        </li>
      ))
    }
  </ul>
</div>
