---
import { IconPin, IconMail } from "@/shared/assets/icons";
import { Button } from "@/shared/ui/button";

import styles from "./styles.module.css";
import { EMAIL_SUPPORT } from "@/shared/config";
---

<div class={styles.root}>
  <div class={styles.header}>
    <div class={styles.background}></div>
    <p class={styles.textContact}>
      <IconPin class={styles.textIcon} />
      30 N Gould St Ste R Sheridan, Wyoming 82801
    </p>
    <a
      href={`mailto:${EMAIL_SUPPORT}`}
      class={styles.textContact}
      target="_blank"
    >
      <IconMail class={styles.textIcon} />
      {EMAIL_SUPPORT}
    </a>
  </div>
  <form class={styles.form}>
    <div class={styles.formRow}>
      <label class={styles.label}>
        Full name
        <input
          name="full_name"
          type="text"
          class={styles.input}
          placeholder="Enter your name"
          autocomplete="given-name family-name"
        />
      </label>
      <label class={styles.label}>
        Email address
        <input
          name="email"
          type="email"
          class={styles.input}
          placeholder="Enter your email address"
          autocomplete="email"
        />
      </label>
    </div>
    <label class={styles.label}>
      Message
      <textarea
        name="message"
        class:list={[styles.input, styles.textarea]}
        placeholder="Enter your message"></textarea>
    </label>
    <div class={styles.actions}>
      <div class={styles.cloudflare}>1</div>
      <Button class={styles.buttonSubmit} type="submit">Get in touch</Button>
    </div>
  </form>
</div>
